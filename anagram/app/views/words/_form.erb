<div class="form">
  <%if @error %>
    <p class='error'>
      <%= @error %>
    </p>
  <% end %>
  <form action="<%= words_form_action(@word) %>" method="post" class="<%= words_form_class(@word) %>" id="<%= words_form_id(@word) %>">
    <input type="hidden" name="_method" value="<%= words_form_method(@word) %>" />
    <input type="text" name="text"><br/>
    <input type="submit" name="btn" class="btn btn-default" value="Add the word!">
  </form>
</div>
