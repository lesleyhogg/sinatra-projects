<div class="show">
  <div class="col-md-2">
  </div>
  <div class="col-md-8">
    <h1>Anagrams for the Word<br/><span><%= "#{@word}" %></span></h1>
    <img src="/img/arrow.png" alt="downward arrow">
    <ul class="anagrams">
      <% if !@anagrams.nil? %>
      	<% @anagrams.each do |word| %>
      		<li><%= "#{word.text}" %></li>
        <% end %>
    	<% end %>
    </ul>
    <a href="/" class="btn btn-default">Try Another Word</a>
  </div>
  <div class="col-md-2">
  </div>
</div>
